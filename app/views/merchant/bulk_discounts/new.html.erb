<h2>Add New Discount</h2>
<%= form_with(url: "/merchants/#{params[:merchant_id]}/bulk_discounts", method: "post") do %>
  <%= label_tag :name %>
  <%= text_field_tag :name %></br>

  <%= label_tag :discount %>
  <%= text_field_tag :discount %></br>

  <%= label_tag :threshold %>
  <%= text_field_tag :threshold %></br>

  <%= submit_tag 'Add Discount ' %>
<% end %>
